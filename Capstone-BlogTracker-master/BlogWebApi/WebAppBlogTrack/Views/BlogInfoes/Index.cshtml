@model IEnumerable<BlogWebApi.Models.BlogInfo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<p>
    <a asp-action="Create">Create New</a>
</p>
<span>
    <div class="text-right mb-3">
        <form asp-controller="EmpInfoes" asp-action="Login" method="post">
            <button type="submit" class="btn-danger">Logout</button>
        </form>
    </div>
</span>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfCreation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpEmailId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfCreation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlogUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpEmailId)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-danger"  asp-route-id="@item.BlogInfoId">Edit</a> |
                    <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.BlogInfoId">Details</a> |
                    <a asp-action="Delete" class="btn btn-success" asp-route-id="@item.BlogInfoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
